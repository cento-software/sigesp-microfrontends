---
import modulos from "../../util/modulos.json";
import Navbar from "../../components/Navbar.vue";
import BaseLayout from "../../layouts/BaseLayout.astro";
import Sidemenu from "../../components/Sidemenu.vue";

export function getStaticPaths() {
  return modulos.map(({ name }) => ({ params: { path: name } }));
}

const { path } = Astro.params;
---

<BaseLayout>
  <div class="page">
    <Navbar modulo={path} client:load />

    <Sidemenu modulo={path} />
    <main></main>
  </div>
</BaseLayout>

<style scoped>
  .page {
    min-height: 100vh;
    width: 100vw;
    display: grid;
    grid-template-columns: 1fr 8fr;
    grid-template-rows: 1fr 12fr;
  }

  header {
    grid-column-start: 1;
    grid-column-end: 3;
  }

  main {
    background-color: #f8fafb;
  }
</style>
