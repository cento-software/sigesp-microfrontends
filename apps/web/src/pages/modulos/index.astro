---
import BaseLayout from "../../layouts/BaseLayout.astro";
import modulos from "../../util/modulos.json";
---

<BaseLayout>
  <main>
    <section>
      {
        modulos.map(({ name, description, color }) => (
          <a href={`/modulos/${name}`}>
            <button style={`background-color: ${color};`} data-name={name}>
              <span class="name">{name}</span>
              <span class="description">{description}</span>
            </button>
          </a>
        ))
      }
    </section>
  </main>
</BaseLayout>

<style scoped>
  main {
    width: 100vw;
    min-height: 100vh;
    background: radial-gradient(circle, #663a2a 0, #000 100%);
    display: flex;
    flex-direction: column;
    gap: 2rem;
    align-items: center;
    justify-content: center;
  }

  section {
    display: grid;
    grid-template-columns: repeat(4, minmax(0, 1fr));
    gap: 0.5rem;
    width: 50%;
  }

  a {
    text-decoration: none;
  }

  button {
    padding: 0.5rem;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    color: white;
  }

  .name {
    font-size: 1rem;
    font-weight: 600;
    text-transform: uppercase;
  }

  .description {
    font-size: 0.8rem;
    opacity: 60%;
  }
</style>
